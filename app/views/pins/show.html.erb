<h3><%= @pin.title %> | <%= link_to "Back", pins_path %></h3>

<%= link_to(image_tag(@pin.image.thumb.url, alt: 'Image'), @pin.image.url, target: '_blank') if @pin.image? %>

<hr>
<%= link_to "Upvote", like_pin_path(@pin), method: :put %> |
<%= link_to "Downvote", dislike_pin_path(@pin), method: :put %>
<hr>
Likes: <%= @pin.get_upvotes.size %> | Dislikes: <%= @pin.get_downvotes.size %>
